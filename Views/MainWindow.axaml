<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:f1parcfermeoptimizer.ViewModels"
        mc:Ignorable="d"
        x:Class="f1parcfermeoptimizer.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="F1 Parc FermÃ© Optimizer" Width="400" Height="600">

	<StackPanel Margin="20" Spacing="10">
		<TextBlock Text="Front Wing Left Angle:" FontWeight="Bold"/>
		<TextBox Text="{Binding CurrentSetup.FrontWingLeft}" />

		<TextBlock Text="Front Wing Right Angle:" FontWeight="Bold"/>
		<TextBox Text="{Binding CurrentSetup.FrontWingRight}" />

		<TextBlock Text="Rear Wing Angle:" FontWeight="Bold"/>
		<TextBox Text="{Binding CurrentSetup.RearWing}" />

		<TextBlock Text="Track Name:" FontWeight="Bold"/>
		<TextBox Text="{Binding Parameters.TrackName}" />

		<Button Content="Run Simulation"
						Command="{Binding RunSimulationCommand}"
						IsEnabled="{Binding !IsSimulationRunning}"
						Margin="0,20"/>

		<ProgressBar IsIndeterminate="True"
								 IsVisible="{Binding IsSimulationRunning}"
								 Height="20"/>

		<StackPanel Margin="0,20" IsVisible="{Binding !IsSimulationRunning}">
			<TextBlock Text="Results:" FontWeight="Bold" FontSize="16"/>
			<TextBlock Text="Qualifying Lap Time:"/>
			<TextBlock Text="{Binding Result.QualifyingLapTime, StringFormat='{}{0:N3} seconds'}"/>
			<TextBlock Text="Race Lap Time:"/>
			<TextBlock Text="{Binding Result.RaceLapTime, StringFormat='{}{0:N3} seconds'}"/>
			<TextBlock Text="Tire Degradation:"/>
			<TextBlock Text="{Binding Result.TireDegradation, StringFormat='{}{0:N2}%'}"/>
			<TextBlock Text="Energy Usage:"/>
			<TextBlock Text="{Binding Result.EnergyUsage, StringFormat='{}{0:N2} kWh'}"/>
		</StackPanel>
	</StackPanel>
</Window>